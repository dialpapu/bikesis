<div class="row">

  <div class="large-6 columns">
      <%= image_tag @accesory_part.image.url%>
  </div>

  <div class="large-6 columns">

    <h3 class="show-for-small">Header<hr/></h3>

    <div class="panel">
      <h4 class="hide-for-small"><%= @accesory_part.typeElement %> - <%= @accesory_part.productTradeMark %> - <%= @accesory_part.productName %> <hr/></h4>
      <h5 class="subheader"><%= @accesory_part.productDescription %></h5>
      <h5 class="subheader"><strong>Precio:</strong> <%= @accesory_part.productPrice %> COP$</h5>
    </div>

    <div class="row">
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Referencia</h5>
          <h6 class="subheader"><%= @accesory_part.productReference %></h6>
          <%= link_to 'Volver', accesory_parts_path , class: "small button radius"%>
        </div>
      </div>

      <%if user_signed_in? && current_user.userType == "Seller"%>
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Id - Estado</h5>
          <h6 class="subheader">
            <%= @accesory_part.productId %> -
            <%if @accesory_part.productStatus == true %>
            Habilitado
            <%else%>
            Deshabilitado
            <%end%>
          </h6>
          <%= link_to 'Editar', edit_accesory_part_path(@accesory_part) , class: "small button success radius"%> 
        </div>
      </div>
      <%end%>
    </div>

  </div>

</div>

