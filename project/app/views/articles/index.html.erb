<div class="row">
  <div class="large-8 columns">
    <h2>Artículos más recientes </h2>
  </div>
</div>
<div class="row">
<div class="large-4 columns">
<a class="th [radius]" href="#">
  <img src="/images/images.jpg">
</a>
</div>
<div class="large-4 columns">
<a class="th [radius]" href="#">
  <img src="/images/playacatedrales.jpg">
</a>
</div>
<div class="large-4 columns">
    <div class="panel">
      <h5>Comencemos...</h5>
      <p align="justify">CREA TU BLOG EN TAN SÓLO UNOS SEGUNDOS, COMPARTE TUS EXPERIENCIAS Y ENTRA EN NUESTRO UNIVERSO.</p>
      <a href="/articles/new">Crear un artículo</a>
      <% else %>      
      <a href="/users/sign_up">Acceder</a>
      
    </div>
  </div>
  <% @articles.reverse_each do |article| %>
  
    <hr/>
    <article>
      
      <div class="row">
        <div class="large-8 columns">
          <h3>article.articleTitle</h3>
          <p align="justify"><%= article.summary %></p>
        </div>
      </div>
      <h6><%= article.publicationDate %>.</h6>
      <dl class="sub-nav">
        <dd><%= link_to 'Leer más', article %></dd>
      <dd><%= link_to 'Editar', edit_article_path(article) %></dd>
      <dd><%= link_to 'Borrar', article, :confirm => '¿Seguro de que deseas borrar este artículo?', :method => :delete %></dd>
      </dl>
    </article>
      
  
  <% end %>
  
      <a href="/articles/new">Crear un artículo</a>   |
      <a href="/users/sign_up">Registrarse</a> |
      <a href="/users/sign_in">Acceder</a>
      
</div>

