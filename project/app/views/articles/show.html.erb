<div class="row">
  <div class="large-9 columns" role="content">
    <article>
      <h2 class="subheader"><%= @article.articleTitle%></h2>
      <div class="row">
        <div class="large-6 columns">
          <p><%= @article.summary%></p>
        </div>
      </div>
      <p><%= @article.body%></p> 
      <p>Noticia Nro <%= @article.articleId %> - <%= @article.publicationDate%></p>
    </article>
  </div>
</div>
<%if user_signed_in? && current_user.userType == "Manager"%>
<div class="row">
  <div class="large-8 columns">
    <%= link_to 'Editar', edit_article_path(@article) , class: "radius button center"%>
  </div>
  <br>
  <br>
  <br>
  <br>

  <div class="large-12 columns">
    <%= link_to '← Volver', articles_path %>
  </div>
</div>
<%end%>



