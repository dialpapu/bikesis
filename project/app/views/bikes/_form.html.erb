<%= form_for(@bike) do |f| %>
<% if @bike.errors.any? %>
<div class="row">
  <div class="small-8 large-centered columns">
    <div data-alert class="alert-box alert radius">
      <%= pluralize(@bike.errors.count, "error") %> no permite guardar la informaci√≥n de la bicicleta
      <ul>
        <% @bike.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Referencia</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :productReference , autofocus: true %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Producto</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :productName %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Marca</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :productTradeMark %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Precio</label>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :productPrice %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Descripcion</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :productDescription %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Medidas</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :measures %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Tipo</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :bikeType %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Imagen</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :productImage %>
        <%if false%>
        <%= f.file_field :photo %>
        <%end%>
      </div>
    </div>
  </div>
</div>
<br>


<div class="row">
  <div class="small-4 large-centered columns"><%= f.submit "Guardar", class: "button success radius" %>
  </div>
</div>

<% end %>



