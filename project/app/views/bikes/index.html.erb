<div class="panel">
  <%if @bikes.empty?  %>
  <p>            </p>
  <div class="row">
    <div class="small-8 large-centered columns">
      <h1>Aun no se ha registrado ninguna bicicleta</h1>
    </div>
  </div>
  <%else%>
  <div class="row">
    <div class="small-12 large-centered columns">
      <h1>Lista de Bicicletas - La Cicler√≠a</h1>
    </div>
    <div class="small-12 large-centered columns">
      
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Referencia</th>
            <th>Producto</th>
            <th>Marca</th>
            <th>Productimage</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Medidas</th>
            <th>Tipo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @bikes.each do |bike| %>
          <tr>
            <td><%= bike.productId %></td>
            <td><%= bike.productReference %></td>
            <td><%= bike.productName %></td>
            <td><%= bike.productTradeMark %></td>
            <td><%= bike.productImage %></td>
            <td><%= bike.productPrice %></td>
            <td><%= bike.productStatus %></td>
            <td><%= bike.productDescription %></td>
            <td><%= bike.measures %></td>
            <td><%= bike.bikeType %></td>
            <td><%= link_to 'Show', bike %></td>
            <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
            <td><%= link_to 'Habilitar/Deshabilitar', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
    <br>
      <%= link_to 'Nueva Bicicleta', new_bike_path %> | 
      <%= link_to 'Generar Reporte', bikes_path(:pdf) %>
  </div>
</div>
<%end%>
</div>