<div class="row">

  <div class="large-6 columns">

    <img src="http://placehold.it/500x500&text=Image"><br>

  </div>

  <div class="large-6 columns">

    <h3 class="show-for-small">Header<hr/></h3>

    <div class="panel">
      <h4 class="hide-for-small"><%= @bike.productTradeMark %> - <%= @bike.productName %> (<%= @bike.bikeType %>)<hr/></h4>
      <h5 class="subheader"><%= @bike.productDescription %></h5>
      <h5 class="subheader"><strong>Medidas</strong><%= @bike.measures %></h5>
      <h5 class="subheader"><strong>Precio:</strong> <%= @bike.productPrice %> COP$</h5>
    </div>

    <div class="row">
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Referencia</h5>
          <h6 class="subheader"><%= @bike.productReference %></h6>
          <%= link_to 'Volver', bikes_path , class: "small button radius"%>
        </div>
      </div>

      <%if user_signed_in? && current_user.userType == "Seller"%>
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Id - Estado</h5>
          <h6 class="subheader">
            <%= @bike.productId %>
            <%if @bike.productStatus == true %>
            Habilitado
            <%else%>
            Deshabilitado
            <%end%>
          </h6>
          <%= link_to 'Editar', edit_bike_path(@bike) , class: "small button success radius"%> 
        </div>
      </div>
      <%end%>
    </div>

  </div>

</div>

