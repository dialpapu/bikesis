<h1>Listing clientes</h1>

<table>
  <thead>
    <tr>
      <th>Idpersona</th>
      <th>Documento</th>
      <th>Nombrepersona</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Estadopersona</th>
      <th>Fechanacimiento</th>
      <th>Permisopublicidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.idPersona %></td>
        <td><%= cliente.documento %></td>
        <td><%= cliente.nombrePersona %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.estadoPersona %></td>
        <td><%= cliente.fechaNacimiento %></td>
        <td><%= cliente.permisoPublicidad %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

