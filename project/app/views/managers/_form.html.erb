<%= form_for(@manager) do |f| %>
<% if @manager.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@manager.errors.count, "error") %> prohibited this manager from being saved:</h2>

  <ul>
    <% @manager.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Identificador del gerente *</label>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :personId %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Documento Gerente *</label>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :document %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Nombre completo *</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :personName %>
      </div>
    </div>
  </div>
</div>  

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Apellidos *</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :lastName %>
      </div>
    </div>
  </div>
</div>  


<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Numero telefonico *</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :telephone %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Estado *</label>
      </div>
      <div class="small-9 columns">
        <%= f.check_box :personStatus %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Correo electronico *</label>
      </div>
      <div class="small-9 columns">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Contraseña *</label>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Confirme la contraseña *</label>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-4 large-4 columns"><%= f.submit %></div>
</div>
<% end %>
