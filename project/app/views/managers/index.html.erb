<h1>Listing managers</h1>

<table>
  <thead>
    <tr>
      <th>Personid</th>
      <th>Document</th>
      <th>Personname</th>
      <th>Lastname</th>
      <th>Telephone</th>
      <th>Personstatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.personId %></td>
        <td><%= manager.document %></td>
        <td><%= manager.personName %></td>
        <td><%= manager.lastName %></td>
        <td><%= manager.telephone %></td>
        <td><%= manager.personStatus %></td>
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

