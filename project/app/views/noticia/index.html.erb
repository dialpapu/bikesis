<h1>Listing noticia</h1>

<table>
  <thead>
    <tr>
      <th>Idnoticia</th>
      <th>Idgerente</th>
      <th>Fechapublicacion</th>
      <th>Cuerpo</th>
      <th>Resumen</th>
      <th>Estadonoticia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @noticia.each do |noticium| %>
      <tr>
        <td><%= noticium.idNoticia %></td>
        <td><%= noticium.idGerente %></td>
        <td><%= noticium.fechaPublicacion %></td>
        <td><%= noticium.cuerpo %></td>
        <td><%= noticium.resumen %></td>
        <td><%= noticium.estadoNoticia %></td>
        <td><%= link_to 'Show', noticium %></td>
        <td><%= link_to 'Edit', edit_noticium_path(noticium) %></td>
        <td><%= link_to 'Destroy', noticium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

