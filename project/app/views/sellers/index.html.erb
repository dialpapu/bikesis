<h1>Listing sellers</h1>

<table>
  <thead>
    <tr>
      <th>Personid</th>
      <th>Document</th>
      <th>Personname</th>
      <th>Lastname</th>
      <th>Telephone</th>
      <th>Personstatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sellers.each do |seller| %>
      <tr>
        <td><%= seller.personId %></td>
        <td><%= seller.document %></td>
        <td><%= seller.personName %></td>
        <td><%= seller.lastName %></td>
        <td><%= seller.telephone %></td>
        <td><%= seller.personStatus %></td>
        <td><%= link_to 'Show', seller %></td>
        <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
        <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

